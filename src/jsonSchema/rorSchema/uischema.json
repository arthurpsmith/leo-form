{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/name"
        },
        {
          "type": "Control",
          "scope": "#/properties/types"
        }
      ]
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/established"
        }
      ]
    },
    {
      "type": "ListWithDetail",
      "scope": "#/properties/labels",
      "options": {
        "detail": {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/label",
                  "label": "Label"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/iso639",
                  "label": "Language Code",
                  "options": {
                    "langCode": true
                  }
                }
              ]
            }
          ]
        }
      }
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "Label": "Location ID",
          "scope": "#/properties/addresses/properties/geonames_city/properties/id",
          "options": {
            "locationId": true
          }
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "label": "Latitude",
          "scope": "#/properties/addresses/properties/lat",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/addresses/properties/geonames_city/properties/id",
              "schema": {
                "type": "number"
              }
            }
          }
        },
        {
          "type": "Control",
          "label": "Longitude",
          "scope": "#/properties/addresses/properties/lng",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/addresses/properties/geonames_city/properties/id",
              "schema": {
                "type": "number"
              }
            }
          }
        },
        {
          "type": "Control",
          "label": "Geonames City",
          "scope": "#/properties/addresses/properties/geonames_city/properties/city",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/addresses/properties/geonames_city/properties/id",
              "schema": {
                "type": "number"
              }
            }
          }
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "label": "Country Name",
          "scope": "#/properties/country/properties/country_name",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/addresses/properties/geonames_city/properties/id",
              "schema": {
                "type": "number"
              }
            }
          }
        },
        {
          "type": "Control",
          "label": "Country Code",
          "scope": "#/properties/country/properties/country_code",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/addresses/properties/geonames_city/properties/id",
              "schema": {
                "type": "number"
              }
            }
          }
        },
        {
          "type": "Control",
          "label": "Country Geonames ID",
          "scope": "#/properties/addresses/properties/country_geonames_id",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/addresses/properties/geonames_city/properties/id",
              "schema": {
                "type": "number"
              }
            }
          }
        }
      ]
    },
    {
      "type": "Group",
      "elements": [
        {
          "type": "Control",
          "label": "Geonames Admin 1",
          "scope": "#/properties/addresses/properties/geonames_city/properties/geonames_admin1",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/addresses/properties/geonames_city/properties/geonames_admin1/properties/id",
              "schema": {
                "type": "number"
              }
            }
          }
        },
        {
          "type": "Control",
          "label": "Geonames Admin 2",
          "scope": "#/properties/addresses/properties/geonames_city/properties/geonames_admin2",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/addresses/properties/geonames_city/properties/geonames_admin2/properties/id",
              "schema": {
                "type": "number"
              }
            }
          }
        }
      ]
    }
  ]
}
